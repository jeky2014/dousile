
<h4 class="text-center">批量发布
		<% if(params[:notice] != nil)%>
		&nbsp;<span class="label label-success"><%=params[:notice]%></span>
		<% end %>
</h4><br/>

<form class="form-horizontal" role="form" method="post">
	<%= tag(:input, :type => "hidden", :name =>   
	request_forgery_protection_token.to_s, :value =>   
	form_authenticity_token) %>
   <div class="form-group">
      <label for="firstname" class="col-sm-2 control-label">内容</label>
      <div class="col-sm-10">
		  <textarea style="width:800px; height:400px" id="content" name="content"></textarea>
      </div>
   </div>
   <div class="form-group">
      <div class="col-sm-offset-5 col-sm-7">
		 <div>
         <button type="submit" class="btn btn-default">提交</button>&nbsp;&nbsp;
		 <input type="reset" class="btn btn-default" value="重填" />
		 </div>
      </div>
   </div>
</form>